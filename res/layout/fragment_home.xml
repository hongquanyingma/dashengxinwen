<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#bc3131"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="大圣新闻"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:textStyle="bold|italic"
            android:textSize="20dp"
             />

        <EditText
            android:id="@+id/fragment_home_searchinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:hint="搜你想要的"
            android:padding="5dp"
            android:background="@drawable/lpublish__select"
            android:textColorHint="#a2a2a2" />

        <!-- 搜索键  -->
        <ImageView
            android:id="@+id/fragment_home_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/search" />

        
    </LinearLayout>

    <com.msy.lyj.view.utils.XListView
        
        android:id="@+id/fragment_home_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
      
</LinearLayout>