<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a2a2a2"
    android:orientation="vertical"
   >

    <LinearLayout
        android:id="@+id/news"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:paddingLeft="40dp"
            android:src="@drawable/biz_navigation_tab_news" />

        <TextView
            android:id="@+id/onet"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="新闻"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dingyue"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:paddingLeft="40dp"
            android:src="@drawable/biz_navigation_tab_read" />

        <TextView
            android:id="@+id/twot"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="订阅"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gentie"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:paddingLeft="40dp"
            android:src="@drawable/biz_navigation_tab_ties" />

        <TextView
            android:id="@+id/onet"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="跟帖"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tupian"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:paddingLeft="40dp"
            android:src="@drawable/biz_navigation_tab_pics" />

        <TextView
            android:id="@+id/onet"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="图片"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toupiao"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:paddingLeft="40dp"
            android:src="@drawable/biz_navigation_tab_voted" />

        <TextView
            android:id="@+id/onet"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="投票"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    

</LinearLayout>