<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55c2c2c2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bc3131"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:onClick="fragmenthomebackClick"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="记者天地"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp" >
                
                
                 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25dp" >

        <com.msy.lyj.view.utils.MyImageView
            android:id="@+id/fragment_mine_headphoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/publish_head1" />

        <TextView
            android:id="@+id/fragment_mine_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="新闻发布中心"
            android:textColor="#fff"
            android:textSize="20dp"
             />
        
        </LinearLayout>

                <EditText
                    android:id="@+id/act_publish_action_name"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/lpublish__select"
                    android:hint="输入新闻名称"
                    android:gravity="top"
                    android:singleLine="true" />

                    <Spinner
                        android:layout_marginTop="10dp"
                        android:id="@+id/act_publish_spinner"
                        android:layout_width="80dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />

                   

                <EditText
                    android:id="@+id/act_publish_action_desc"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lpublish__select"
                    android:hint="输入新闻简介"
                    android:gravity="top"
                    android:padding="5dp"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lpublish__select"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/act_publish_action_details"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@null"
                        android:hint="输入新闻详情"
                        android:gravity="top"
                        android:padding="5dp" >
                    </EditText>

                    <View 
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@null"
                        />
                    <LinearLayout
                        android:id="@+id/act_publish_gather_send_img_add_lin1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/act_public_action_iv_addpicture"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/gather_send_img_add" />
                    </LinearLayout>

                     <View 
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@null"
                        />
                    <LinearLayout
                        android:id="@+id/act_publish_gather_send_img_add_lin2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/act_public_action_lin_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lpublish__select"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/city" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="显示地点" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/act_publish_SelectAddressTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="昌平区 回龙观"
                        android:textColor="#a2a2a2"
                        android:textSize="12sp" />
                </LinearLayout>

               
                <LinearLayout
                    android:id="@+id/act_public_action_lin_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lpublish__select"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:padding="4dp"
                        android:src="@drawable/my_send" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="发布时间" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/act_publish_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="2016-11-11 16:30"
                        android:textColor="#a2a2a2"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/act_publish_action_button"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_btn__select"
                    android:padding="10dp"
                    android:text="发布"
                    android:textColor="#fff" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>