<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/act_login_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="onRegisterBackListener"
            android:src="@drawable/act_register_back" />

        <TextView
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:clickable="true"
              android:onClick="onRegisterregisterClick"
            android:src="@drawable/act_register_reg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp" >

        <EditText
            android:id="@+id/act_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn__select"
            android:hint="请输入用户名"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/act_register_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_btn__select"
            android:hint="请输入手机号"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/act_Register_SmsCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_btn__select"
                android:hint="请输入验证码"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorHint="#fff" />

            <Button
                android:id="@+id/act_register_code_btn"
                android:onClick="getCodeClick"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_btn__select"
                android:padding="10dp"
                android:text="获取验证码"
                android:textColor="#fff" />
        </LinearLayout>

        <EditText
            android:id="@+id/act_register_Et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_btn__select"
            android:hint="请输入密码"
            android:singleLine="true"
            android:padding="10dp"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/act_register_Et_pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_btn__select"
            android:hint="再次确认密码"
            android:singleLine="true"
            android:padding="10dp"
            android:textColorHint="#fff" />
    </LinearLayout>

</LinearLayout>