<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

     >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#BC3131" >

        <ImageView
            android:id="@+id/act_details_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="详情"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.msy.lyj.picutils.GalleryView
        
        android:id="@+id/act_details_gallery_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        
        />
    
    <TextView
        android:id="@+id/details_listview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="红泉映马"
        android:textSize="20sp" />
    
    
      <TextView
            android:id="@+id/details_listview_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:layout_marginLeft="12dp"
            android:text="历史"
            android:textColor="#a2a2a2" />
      <TextView
            android:id="@+id/details_listview_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:text="昨天  20:30"
            android:textColor="#a2a2a2" />

    <TextView
        android:id="@+id/details_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="20dp"
        android:text="   临溪羡鱼，不如退而织网！这是一句多么有哲理的话啊，青年的我们，需要奋斗。" />


        

        <TextView
            android:id="@+id/details_listview_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="洛阳"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="#a2a2a2" />

    
    <View
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22a2a2a2" />
    
  
    <ListView 
        android:layout_margin="20dp"
        android:id="@+id/act_details_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>
    
    

</LinearLayout>